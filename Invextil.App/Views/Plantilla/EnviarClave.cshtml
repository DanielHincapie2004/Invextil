
@{
    Layout = null;
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EnviarClave</title>

    <link href="~/css/sb-admin-2.css" rel="stylesheet">
</head>
<body style="background-color:#1a163c">
    <br />
    <br />
    <div style="width:400px;border-radius:25px; margin:auto;background-color:#fff;box-shadow:0px 0px 10px  #DEDEDE;padding:20px">
        <table style="width:100%">
            <tr>
                <td align="center" colspan="2">
                    <h2 style="color:#1a163c">Bienvenido</h2>
                </td>
            </tr>
            <tr>
                <td align="left" colspan="2">
                    <p>Se creó exitosamente tu usuario. Los detalles de tu cuenta son:</p>
                </td>
            </tr>
            <tr>
                <td><h5 style="color:#1a163c;margin:2px;">Correo:</h5></td>
                <td>@ViewData["Correo"]</td>
            </tr>
            <tr>
                <td><h5 style="color:#1a163c;margin:2px">Contraseña:</h5></td>
                <td>@ViewData["Clave"]</td>
            </tr>
        </table>
        <div style="background-color:#FFE1CE;padding:15px;margin-top:15px;margin-bottom:15px">
            <p style="margin:0px;color: #F45E00;">Le recomendamos cambiar la contraseña una vez inicie sesión.</p>
        </div>
        <table>
            <tr>
                <td>Para iniciar sesión ingrese a la siguiente URL:</td>
            </tr>
        </table>
        <br />
        <center><a href="@ViewData["Url"]" class="btn btn-primary">Iniciar Sesión</a></center>
    </div>
    <br />
    <br />
</body>
</html>
